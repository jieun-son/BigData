package com.lect.ex5_boxorrect;
// 데이터(private), 생성자함수, 메소드, setter&getter
public class BoxOrRect {
	private int width;
	private int height;
	private int depth; 
	private int volume; // 부피나 넓이
	public BoxOrRect() {}//디폴트 생성자 함수
	public BoxOrRect(int width, int height) { // 직사각형
		this.width = width;
		this.height = height;
		// depth = 0;
		// volume = width*height;
	}
	public BoxOrRect(int width, int height, int depth) { // 직육면체
		this.width = width;
		this.height = height;
		this.depth = depth;
		volume = width * height * depth;
	}
}
