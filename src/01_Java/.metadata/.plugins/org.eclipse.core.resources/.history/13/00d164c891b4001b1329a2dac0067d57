package com.lect.ex8_static_student;

public class Student {
	private int no;
	private String name;
	private int kor;
	private int eng;
	private int mat;
	private int tot;
	private double avg;
	private static int count; 
	public Student() {}
	public Student(String name, int kor, int eng, int mat) {
		no = ++count;
		this.name = name; this.kor = kor;
		this.eng = eng;   this.mat = mat;
		tot = kor+eng+mat;
		avg = tot/3.0;
	}
}
